{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Current TS File",
      "type": "node",
      "request": "launch",
      "args": ["${relativeFile}"],
      "runtimeArgs": ["--nolazy", "-r", "ts-node/register"],
      "sourceMaps": true,
      "cwd": "${workspaceRoot}",
      "protocol": "inspector"
    },
    {
      "type": "chrome",
      "request": "launch",
      "name": "Launch Chrome",
      "url": "http://localhost:5173",
      "webRoot": "${workspaceFolder}/client/src"
    },
    {
      "name": "Launch NodeJS server",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceRoot}/server",
      "runtimeExecutable": "pnpm",
      "args": ["start"],
      "port": 9229,
      "restart": true,
      "protocol": "inspector",
      "console": "integratedTerminal",
      "sourceMaps": true
    },
    {
      "name": "Launch NodeJS server & client",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceRoot}/server",
      "runtimeExecutable": "pnpm",
      "args": ["start"],
      "port": 9229,
      "restart": true,
      "protocol": "inspector",
      "console": "integratedTerminal",
      "preLaunchTask": "Start Client",
      "sourceMaps": true
    },
    {
      "name": "Debug Jest Tests",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceRoot}/server",
      "runtimeExecutable": "pnpm",
      "args": ["test", "--", "--runInBand", "${input:jestArguments}"],
      "console": "integratedTerminal",
      "sourceMaps": true
    }
  ],
  "inputs": [
    {
      "id": "jestArguments",
      "type": "promptString",
      "description": "Argument string passed to the Jest launch.",
      "default": ""
    }
  ]
}
