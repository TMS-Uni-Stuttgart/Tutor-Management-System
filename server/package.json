{
    "name": "server",
    "version": "0.0.1",
    "description": "",
    "author": "",
    "license": "MIT",
    "scripts": {
        "prebuild": "rimraf dist temp",
        "build": "pnpm prebuild && nest build --path \"./tsconfig.build.json\"",
        "format": "eslint --fix \"./**/*.ts?(x)\"",
        "lint": "pnpm run eslint:check",
        "eslint:check": "eslint \"./**/*.ts?(x)\"",
        "prettier:check": "prettier --check \"./**/*.ts?(x)\"",
        "prettier:format": "prettier --write --loglevel warn \"./**/*.ts?(x)\"",
        "ts:check": "tsc --project tsconfig.check.json --noEmit --incremental false",
        "ts:check:watch": "tsc --project tsconfig.check.json --noEmit --incremental false -w",
        "start": "env-cmd cross-env NODE_ENV=development nest start -p ./tsconfig.dev.json --debug --watch",
        "start:timezone": "cross-env TZ='Europe/Berlin' pnpm start",
        "start:nowatch": "env-cmd cross-env NODE_ENV=development nest start",
        "start:prod": "node dist/main",
        "test": "env-cmd -f ./.env.test cross-env NODE_ENV=test jest --colors --verbose=true",
        "test:watch": "pnpm test --watch",
        "test:cov": "pnpm test --coverage",
        "test:debug:win": "env-cmd -f ./.env.test cross-env NODE_ENV=test node --inspect-brk -r tsconfig-paths/register -r ts-node/register ../node_modules/jest/bin/jest.js --runInBand",
        "derp": "jest --init",
        "test:e2e": "jest --config ./test/jest-e2e.json"
    },
    "dependencies": {
        "@mikro-orm/core": "^6.4.4",
        "@mikro-orm/mysql": "^6.4.4",
        "@mikro-orm/nestjs": "^6.0.2",
        "@mikro-orm/reflection": "^6.4.4",
        "@nestjs/common": "^10.4.15",
        "@nestjs/core": "^10.4.15",
        "@nestjs/passport": "^10.0.3",
        "@nestjs/platform-express": "^10.4.15",
        "@nestjs/swagger": "^7.4.2",
        "axios": "^1.7.9",
        "bcryptjs": "^2.4.3",
        "body-parser": "^1.20.3",
        "class-validator": "^0.14.1",
        "excel4node": "^1.8.2",
        "express-session": "^1.18.1",
        "form-data": "^4.0.1",
        "highlight.js": "^11.11.1",
        "jszip": "^3.10.1",
        "luxon": "^3.5.0",
        "nodemailer": "^6.9.16",
        "papaparse": "^5.4.1",
        "passport": "^0.7.0",
        "passport-local": "^1.0.0",
        "pug": "^3.0.3",
        "reflect-metadata": "^0.2.2",
        "rimraf": "^6.0.1",
        "rxjs": "^7.8.1",
        "swagger-ui-express": "^5.0.1",
        "uuid": "^10.0.0",
        "yaml": "^2.7.0"
    },
    "devDependencies": {
        "@nestjs/cli": "^10.4.9",
        "@nestjs/schematics": "^10.2.3",
        "@nestjs/testing": "^10.4.15",
        "@types/bcryptjs": "^2.4.6",
        "@types/body-parser": "^1.19.5",
        "@types/express": "^4.17.21",
        "@types/express-serve-static-core": "^4.19.6",
        "@types/express-session": "^1.18.1",
        "@types/jest": "^29.5.14",
        "@types/luxon": "^3.4.2",
        "@types/node": "^22.10.5",
        "@types/nodemailer": "^6.4.17",
        "@types/papaparse": "^5.3.15",
        "@types/passport": "^1.0.17",
        "@types/passport-local": "^1.0.38",
        "@types/pug": "^2.0.10",
        "@types/supertest": "^6.0.2",
        "@types/uuid": "^10.0.0",
        "jest": "^29.7.0",
        "supertest": "^7.0.0",
        "ts-jest": "^29.2.5",
        "ts-loader": "^9.5.1",
        "tsconfig-paths": "^4.2.0"
    }
}
