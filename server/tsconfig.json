{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "shared/*": ["./shared/*"]
    },
    "strict": true,
    "incremental": true,
    "esModuleInterop": true,
    "lib": ["es2020"],
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "dist", "temp"]
}
